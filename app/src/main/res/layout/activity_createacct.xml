<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="glirt.motun.glirt2.GeneralUsers.createacctActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <Button
            android:id="@+id/useract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/createbutton"
            android:text="LOGIN ACCOUNT"
            android:textAlignment="center">

        </Button>

        <Button
            android:id="@+id/bizact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/createbutton"
            android:text="SIGNUP ACCOUNT"
            android:textAlignment="center"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>